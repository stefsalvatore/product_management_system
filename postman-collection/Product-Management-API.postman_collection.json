    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products (with pagination, sort, search)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products?page=1&limit=10&sortBy=price&order=ASC&search=laptop&category=electronics",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "sortBy",
                  "value": "price"
                },
                {
                  "key": "order",
                  "value": "ASC"
                },
                {
                  "key": "search",
                  "value": "laptop"
                },
                {
                  "key": "category",
                  "value": "electronics"
                }
              ]
            }
          },
          "response": []
